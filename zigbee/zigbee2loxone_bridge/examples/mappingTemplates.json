


{
  "templates": [
    {
      "name": "Lidl wall socket",
      "hint" : "Create single 'Switch' component in loxplan",
      "template":  {
        "zigbeeDeviceName": "${ZIGBEE_DEVICE_NAME}",
        "l2zPayloadMappings": [
          {
            "loxoneComponentName": "${LOXONE_COMPONENT_NAME}",
            "mappingFormula": "{ \"state\" : \"${payload?.active?.toUpperCase()}\" }"
          }
        ],
        "z2lPayloadMappings": [
          {
            "loxoneComponentName": "${LOXONE_COMPONENT_NAME}",
            "mappingFormula": "${payload?.state?.toLowerCase()}"
          }
        ]
      }
    },


    {
      "name": "Xiaomi Aquara temperature sensor",
      "hint" : "Create two virtual analog inputs in loxplan, one for temperature and one for humidity",
      "template": {
        "zigbeeDeviceName": "${ZIGBEE_DEVICE_NAME}",
        "z2lPayloadMappings": [
          {
            "loxoneComponentName": "${LOXONE_COMPONENT_NAME_TEMPERATURE}",
            "mappingFormula": "${payload.temperature}"
          },
          {
            "loxoneComponentName": "${LOXONE_COMPONENT_NAME_HUMIDITY}",
            "mappingFormula": "${payload.humidity}"
          }
        ]
      }
    },


    {
      "name": "Ikea LED bulb",
      "hint": "Create virtual analog output in loxplan with scale 0-255",
      "template": {
        "zigbeeDeviceName": "${ZIGBEE_DEVICE_NAME}",
        "l2zPayloadMappings": [
          {
            "loxoneComponentName": "${LOXONE_COMPONENT_NAME}",
            "mappingFormula": "{ \"brightness\" : \"${payload.value}\" }"
          }
        ]
      }
    }

  ]






}